{
    "tool": "ktoa",
    "version": "3.0.2.0",
    "requires": ["katana"],
    "platforms": ["windows"],
    "environment": {
        "KTOA_MAJOR_VERSION": "3",
        "KTOA_MINOR_VERSION": "0",
        "KTOA_PATCH_VERSION": "2.0",
        "KTOA_VERSION": "${KTOA_MAJOR_VERSION}.${KTOA_MINOR_VERSION}.${KTOA_PATCH_VERSION}",
        "KTOA": {
            "windows": "${ProgramFiles}/ktoa/ktoa-${KTOA_VERSION}-kat3.5-windows"
        },
        "ARNOLD_MAJOR_VERSION": "6",
        "ARNOLD_MINOR_VERSION": "0",
        "ARNOLD_PATCH_VERSION": "2",
        "ARNOLD_VERSION": "${ARNOLD_MAJOR_VERSION}.${ARNOLD_MINOR_VERSION}.${ARNOLD_PATCH_VERSION}",
        "ARNOLD_PLUGIN_PATH": "${KTOA}/shaders",
        "KATANA_RESOURCES": "${KTOA}",
        "DEFAULT_RENDERER": "arnold",
        "PATH": {
            "windows": "${KTOA}/bin"
        }
    }
}
