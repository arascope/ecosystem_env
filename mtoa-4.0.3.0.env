{
    "tool": "mtoa",
    "version": "4.0.3",
    "requires": [
        "maya",
        "arnold"
    ],
    "platforms": ["windows"],
    "environment": {
        "MTOA_VERSION": "4.0.3.0",
        "ARNOLD_PLUGIN_PATH": "${MTOA}/shaders",
        "MAYA_MODULE_PATH": "${MTOA}",
        "MTOA": "${PG_SW_BASE}/solidangle/mtoa_${MAYA_VERSION}_${MTOA_VERSION}",
        "MTOA_EXTENSIONS_PATH": {
            "windows": "${MTOA}/extensions"
        },
        "PATH": {
            "windows": "${MTOA}/bin"
        }
    }
}
